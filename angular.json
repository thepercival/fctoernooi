{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "fctoernooi": {
      "i18n": {
        "sourceLocale": "en-US",
        "locales": {
          "nl-NL": {
            "translation": "src/locale/messages.nl-NL.xlf",
            "baseHref": ""
          }
        }
      },
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder" : "@angular-devkit/build-angular:browser-esbuild",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "inlineStyleLanguage": "sass",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "assets"
              },
              "src//assets/favicon/favicon.ico",
              "src/manifest.webmanifest",
              "src/robots.txt"
            ],
            "styles": [
              "src/sass/main.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "./node_modules/bootstrap/scss"
              ]
            },            
            "scripts": []
          },
          "configurations": {
            "prod": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": {
                "styles": {
                  "minify": true,
                  "inlineCritical": true
                },
                "fonts": {
                  "inline": true
                }
              },
              "outputHashing": "all",
              "serviceWorker": true
            },
            "nl-NL": {
              "outputPath": "dist/nl-NL",
              "i18nMissingTranslation": "error",
              "localize": [
                "nl-NL"
              ]
            },
            "acc": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.acc.ts"
                }
              ],
              "serviceWorker": true
            },
            "dev": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "dev-nl-NL": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "localize": [
                "nl-NL"
              ],
              "i18nMissingTranslation": "warning"
            }            
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "fctoernooi:build"
          },
          "configurations": {
            "prod": {
              "browserTarget": "fctoernooi:build:prod"
            },
            "dev": {
              "browserTarget": "fctoernooi:build:dev"        
            },
            "dev-nl-NL": {
              "browserTarget": "fctoernooi:build:dev-nl-NL"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "fctoernooi:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [],
            "styles": [
              "src/sass/main.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "../../node_modules/bootstrap/scss"
              ]
            },
            "assets": [
              "src/assets",
              "src//assets/favicon/favicon.ico",
              "src/manifest.webmanifest"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  },
  "cli": {
    "analytics": "bbc98f42-bcb3-4e47-9edd-46b8f92b9590",
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  }
}
